            <div class="row">
                <div class="col-md-5">
                    <table id="clienteTable" class="table table-striped">
                        <thead>
                        <tr>
                            <th>Nome</th>
                            <th>E-mail</th>
                        </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
                <div class="col-lg-5 col-md-7">
                    <div class="card">
                        <div class="header">
                            <h4 class="title">Adicionar Cliente</h4>
                        </div>
                        <div class="content">
                            <div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Nome</label>
                                            <input id="txt_nome" type="text" class="form-control border-input" placeholder="Nome">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Email</label>
                                            <input id="txt_email" type="email" class="form-control border-input" placeholder="Email">
                                        </div>
                                    </div>
                                </div>
                                <div class="text-center">
                                    <button id="btn_incluir" class="btn btn-success btn-fill btn-wd">Salvar</button>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

